<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  

</head>
  <body style="background-color: rgb(73, 72, 72)">

        <% include partials/template/header.ejs %>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="border-top: 5px solid black; height: 50px;">
                
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                  <ul class="navbar-nav">
                    <li class="nav-item">
                      <a class="nav-link" href="#">Filter</a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sort By
                      </a>
                      <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                      </div>
                    </li>
                  </ul>
                </div>
              </nav>

    <div class="container-fluid">
        <div class="row">
        <% project.forEach(record => { %>
            <div class="col-sm-6 col-md-6 col-lg-3">
                <div class="card mb-5 mt-2" style="border: none">
                        <a href="/" style="color: black; text-decoration: none">
                        <% if (record.id === 1){ %>
                            <div class="bg-warning" style="height:10vh;"></div>
                            <% } else if (record.id === 2){%> 
                                <div style="background-image: linear-gradient(rgb(245, 12, 12), rgb(156, 46, 38)); height:10vh"></div>
                            <% } else if (record.id === 3){%> 
                                <div style="background-image: linear-gradient(rgb(67, 3, 243), rgb(24, 20, 80)); height:10vh"></div>
                                <%} else{ %>
                                    <div style="background-image: linear-gradient(rgb(9, 160, 35), rgb(18, 95, 25)); height:10vh"></div>
                            <% } %>
                        <div class="card-body" style="height: 20vh; overflow: scroll;">
                        <h5 class="card-title"><%= record.pName %></h5>
                        <p class="card-text"><%= record.summary %></p>
                        </div>
                        <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <ul>What we need:
                                <li>developer</li>
                                <li>marketer</li>
                                <li>acrobat</li>
                            </ul>
                        </li>
                        <!-- <li class="list-group-item">
                            <img src="/images/washington.jpg" height="75px" width="75px" alt="" style="border-radius: 50%;">
                            <img src="/images/washington.jpg" height="75px" width="75px" alt="" style="border-radius: 50%;"> -->

                        </li>
                        </ul>
                        <div class="card-body" style="background-image: linear-gradient(rgb(189, 196, 189), rgb(209, 221, 209))">

                        </div>

                </div>
            </a>

            </div>
            <% }) %> 
            
        </div>
    </div>




    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>